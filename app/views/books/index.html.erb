<h2>Books</h2>
<% @books.each do |book| %>

  <p>Title</p>
  <span><%= book.title %></span>
  
  <p>Body</p>
  <span><%= book.body %></span>
  
 <%= link_to 'Show', book_path(book.id) %>
 <%= link_to 'Edit', edit_book_path(book.id) %>
  
<% end %>

<h2>New book</h2>
<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>body</h4>
  <%= f.text_area :body %>
  
  <br><%= f.submit "Create Book" %></br>
  <% end %>