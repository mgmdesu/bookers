<h2>Editing Book</h2>
<% if @book.errors.any? %>
 <%= @book.errors.count %> errors prohibited this book from being saved:
 <ul>
   <% @book.errors.full_messages.each do|message| %>
   <li><%= message %></li>
   <% end %>
 </ul>
 <% end %>

<%= form_with model: @book do |f| %>

  <div class="edit-title">Title</div>
  <%= f.text_field :title %>

  <div class="edit-body">Body</div>
  <%= f.text_area :body %>

  <br><%= f.submit "Update Book" %></br>
  
  <a class="show-link"><%= link_to 'Show', @book %></a>
  <a class="back-link"><%= link_to 'Back', books_path %></a>
<% end %>